<Window x:Class="twitter_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:twitter_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnGet_timeline">Get home timeline</Button>
                <Button x:Name="btnGet_my_tweets" Margin="5,0,0,0">Get my tweets</Button>
                <Button x:Name="btnSend_tweet" Margin="5,0,0,0">Send tweet</Button>
                <Button x:Name="btnLogout" Click="btnLogout_Click" Margin="5,0,0,0">Logout</Button>
            </StackPanel>
            <StackPanel Margin="0,5,0,0">
                <DataGrid x:Name="dgTweets" ItemsSource="{Binding}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Author" Binding="{Binding Path=Author.Name}"/>
                        <DataGridTextColumn Header="Tweet" Binding="{Binding Path=Text}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
