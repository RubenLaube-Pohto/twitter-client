<Window x:Class="twitter_client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:twitter_client"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Button x:Name="btnLogin" Click="btnLogin_Click">Login</Button>
                <Button x:Name="btnQuit" Click="btnQuit_Click">Quit</Button>
            </StackPanel>
            <StackPanel x:Name="spPin" Visibility="Visible">
                <TextBlock>Please input the pin received after authorizing:</TextBlock>
                <TextBox x:Name="txtPin"></TextBox>
                <Button x:Name="btnSubmit" Click="btnSubmit_Click">Submit</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
